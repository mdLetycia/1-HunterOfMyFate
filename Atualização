function drawCharacter() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  // CENTRO DO CANVAS
  const centerX = canvas.width / 2;
  const centerY = canvas.height / 2;

  // TAMANHO DA CABEÇA
  const faceSize = 400;

  // POSIÇÃO FINAL (centralizado)
  const drawX = centerX - faceSize / 2;
  const drawY = centerY - faceSize / 2;

  // PELE
  ctx.drawImage(faceImg, drawX, drawY, faceSize, faceSize);
  ctx.globalCompositeOperation = "multiply";
  ctx.fillStyle = skinInput.value;
  ctx.fillRect(drawX, drawY, faceSize, faceSize);
  ctx.globalCompositeOperation = "source-over";

  // CABELO
  ctx.drawImage(hairImg, drawX, drawY, faceSize, faceSize);
  ctx.globalCompositeOperation = "multiply";
  ctx.fillStyle = hairInput.value;
  ctx.fillRect(drawX, drawY, faceSize, faceSize);
  ctx.globalCompositeOperation = "source-over";
}
